@startuml Diagramme de Cas d'Utilisation - Gestion de Bibliothèque

left to right direction

actor "Bibliothécaire" as Bibliothecaire
actor "Étudiant" as Etudiant

rectangle "Système de Gestion de Bibliothèque" {
    
    package "Gestion des Étudiants" {
        usecase "Ajouter un Étudiant" as UC1_1
        usecase "Modifier un Étudiant" as UC1_2
        usecase "Supprimer un Étudiant" as UC1_3
        usecase "Consulter la Liste des Étudiants" as UC1_4
    }
    
    package "Gestion des Livres" {
        usecase "Ajouter un Livre" as UC2_1
        usecase "Modifier un Livre" as UC2_2
        usecase "Supprimer un Livre" as UC2_3
        usecase "Consulter le Catalogue" as UC2_4
    }
    
    package "Gestion des Emprunts" {
        usecase "Créer un Emprunt" as UC3_1
        usecase "Retourner un Livre" as UC3_2
        usecase "Consulter les Emprunts" as UC3_3
        usecase "Consulter les Emprunts Actifs" as UC3_4
        usecase "Consulter les Emprunts en Retard" as UC3_5
    }
    
    package "Recherche de Livres" {
        usecase "Rechercher par Titre" as UC4_1
        usecase "Rechercher par Auteur" as UC4_2
        usecase "Rechercher par ISBN" as UC4_3
        usecase "Filtrer par Catégorie" as UC4_4
        usecase "Filtrer par Disponibilité" as UC4_5
    }
    
    package "Statistiques" {
        usecase "Consulter les Statistiques" as UC5_1
    }
}

